<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AvaloniaApplication1.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="ButtonsDesign.axaml"></StyleInclude>
    </Application.Styles>
             
    <Application.Resources>
        <LinearGradientBrush x:Key="DefaultGradient" StartPoint="0%, 0%" EndPoint="100%, 0%">
            <GradientStop Offset="0" Color="MidnightBlue"></GradientStop>
            <GradientStop Offset="1" Color="MediumBlue"></GradientStop>
        </LinearGradientBrush>
    </Application.Resources>   
             
</Application>